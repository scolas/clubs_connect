<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/chat_message_vertical_margin"
    android:layout_marginBottom="@dimen/chat_message_vertical_margin"
    >
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/chatMessageBgColorSelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="start"
        android:background="@drawable/chat_message_box"
        android:padding="10dp"
        app:cardElevation="4dp">

        <TextView
            android:maxLines="500"
            android:scrollHorizontally="false"
            android:id="@+id/messageTextView"
            style="@style/MyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hellosdfasdsf asdf " />


    </android.support.v7.widget.CardView>
</FrameLayout>